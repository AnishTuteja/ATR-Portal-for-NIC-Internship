<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NIC-CERT</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
</head>

<body class="container">
    <div class="mt-3"></div>
    <%- include('../partials/flash') %>
    <div class="mt-5 col-md-12 mb-3">
        <div class="card">
            <div class="card-header fw-bold fs-3 text-center text-primary bg-info-subtle">
                Details
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead class="bg-light">
                        <th>Key</th>
                        <th>Value</th>
                    </thead>
                    <tbody>
                        <% if(incidentRequestQuery.type === 'IOC') {  %>
                        <tr>
                            <th>Request Type</th>
                            <td>IOC</td>
                        </tr>
                        <tr>
                            <th>Agency</th>
                            <td><%= incidentRequestQuery.agency %> </td>
                        </tr>
                        <tr>
                            <th>Reference ID</th>
                            <td><%= incidentRequestQuery.referenceId %> </td>
                        </tr>
                        <tr>
                            <th>TLP</th>
                            <td><%= incidentRequestQuery.TLP %></td>
                        </tr>
                        <tr>
                            <th>Confidence</th>
                            <td><%= incidentRequestQuery.confidence %></td>
                        </tr>
                        <tr>
                            <th>Risk</th>
                            <td><%= incidentRequestQuery.risk %></td>
                        </tr>
                        <tr>
                            <th>IP Addresses</th>
                            <td><%= !incidentRequestQuery.IP ? '-' : incidentRequestQuery.IP %></td>
                        </tr>
                        <tr>
                            <th>URL</th>
                            <td><%= !incidentRequestQuery.URL ? '-' : incidentRequestQuery.URL %></td>
                        </tr>
                        <tr>
                            <th>HASH</th>
                            <td><%= !incidentRequestQuery.HASH ? '-' :incidentRequestQuery.HASH %></td>
                        </tr>
                        <tr>
                            <th>Details</th>
                            <td><%= incidentRequestQuery.details %></td>
                        </tr>
                        <% } %>
                        <% if(incidentRequestQuery.type === 'IR') { %>
                        <tr>
                            <th>Request Type</th>
                            <td>IR</td>
                        </tr>
                        <tr>
                            <th>Type</th>
                            <td><%= incidentRequestQuery.Type %> </td>
                        </tr>
                        <tr>
                            <th>IP Addresses</th>
                            <td><%= !incidentRequestQuery.IP ? '-' : incidentRequestQuery.IP %></td>
                        </tr>
                        <tr>
                            <th>URL</th>
                            <td><%= !incidentRequestQuery.URL ? '-' : incidentRequestQuery.URL %></td>
                        </tr>
                        <tr>
                            <th>Details</th>
                            <td><%= incidentRequestQuery.details %></td>
                        </tr>
                        <% } %>
                        <% if(incidentRequestQuery.type === 'Advisory') { %>
                        <tr>
                            <th>Request Type</th>
                            <td>Advisory</td>
                        </tr>
                        <tr>
                            <th>Agency</th>
                            <td><%= incidentRequestQuery.agency %> </td>
                        </tr>
                        <tr>
                            <th>Reference ID</th>
                            <td><%= incidentRequestQuery.referenceId %> </td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td><%= incidentRequestQuery.title %></td>
                        </tr>
                        <tr>
                            <th>Details</th>
                            <td><%= incidentRequestQuery.details %></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="d-flex">
        <button href="javascript:;" onclick="history.back()" class="btn btn-secondary mx-2" id="backButton"><i class='bx bx-arrow-back'></i> Back</button>
        <button class="btn btn-success mx-2" id="downloadPDFButton">Download as PDF</button>
    </div>
    <script>
        const downloadPDFButton = document.getElementById('downloadPDFButton');
        const backButton = document.getElementById('backButton');
        const changeStatusDropdown = document.getElementById('changeStatusDropdown');
        changeStatusDropdown
        downloadPDFButton.addEventListener('click', () => {
            downloadPDFButton.style.display = 'none';
            backButton.style.display = 'none';
            if (changeStatusDropdown)
                changeStatusDropdown.style.display = 'none';
            window.print();
            downloadPDFButton.style.display = 'inline';
            backButton.style.display = 'inline';
            if (changeStatusDropdown)
                changeStatusDropdown.style.display = 'inline';
        })
    </script>
    <script src="/javascripts/bootstrap/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>

</body>

</html>